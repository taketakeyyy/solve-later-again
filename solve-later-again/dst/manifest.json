{
    "manifest_version": 2,
    "name": "Solve Later Again",
    "short_name": "SLA",
    "version": "1.0.0",
    "author": "taketakeyyy",
    "description": "Append a 'Solve Later Again' table on AtCoder Problems",

    "browser_action": {
        "default_icon": {
            "16": "icon.png"
        }
    },

    "content_scripts": [
        {
            "matches": ["https://kenkoooo.com/atcoder/*"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": ["tabs", "storage"]
    
}